<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style">
        <item name="android:layout_width">@dimen/_265sdp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/open_sans_extrabold</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="subtitle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="roundedimageview">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>